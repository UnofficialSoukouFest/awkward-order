{
	"name": "latimeria",
	"image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
	"features": {
		"ghcr.io/devcontainers-extra/features/pnpm:2": {}
	},
	"forwardPorts": [3000],
	"postCreateCommand": "pnpm install",
	"customizations": {
		"jetbrains": {
			"backend": "WebStorm"
		},
		"vscode": {
			"extensions": ["dbaeumer.vscode-eslint"],
			"settings": {
				"editor.formatOnSave": true
			}
		}
	}
}
